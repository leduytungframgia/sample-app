<li id="entry-<%= entry.id %>">
  <p><%= link_to gravatar_for(entry.user, size: 50), entry.user %>
  <span class="user"><%= link_to entry.user.name, entry.user %></span>
  <span class="timestamp">
  Posted <%= time_ago_in_words(entry.created_at) %> ago.
  <%= link_to "Delete", entry, method: :delete,
                                       data: { confirm: "You sure?" } %>
  </p>
  </span>
  <span class="content">
    <%= entry.content %>
    <%= image_tag entry.picture.url if entry.picture? %>
    <br>
    <% if current_user?(entry.user) %>
      
    <% end %>
    <% @count = Entry.find(entry.id).comments.count %>
    <%= link_to "Comment(#{@count})", entry %>
  </span>

</li>